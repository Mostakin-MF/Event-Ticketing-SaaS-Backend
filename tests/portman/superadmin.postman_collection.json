    {
      "name": "Upload NID Image (<=2MB, image only)",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/superadmin/admins/{{adminId}}/nid-image",
          "host": ["{{baseUrl}}"],
          "path": ["superadmin", "admins", "{{adminId}}", "nid-image"]
        },
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "nid",
              "type": "file",
              "src": "/absolute/or/relative/path/to/small_image.jpg"
            }
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 201 or 200', function () {",
              "  pm.expect([200,201]).to.include(pm.response.code);",
              "});",
              "pm.test('Response includes file meta', function () {",
              "  const json = pm.response.json();",
              "  pm.expect(json.data).to.have.property('file');",
              "  pm.expect(json.data.file.size).to.be.below(2 * 1024 * 1024 + 1);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
