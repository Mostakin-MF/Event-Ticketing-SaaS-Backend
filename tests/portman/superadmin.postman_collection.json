  "item": [
    {
      "name": "Create Admin",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/superadmin/admins",
          "host": ["{{baseUrl}}"],
          "path": ["superadmin", "admins"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Iftekhar Tasnim\",\n  \"email\": \"iftekhar@example.xyz\",\n  \"password\": \"Password@123\",\n  \"tenantId\": \"3fa85f64-5717-4562-b3fc-2c963f66afa6\",\n  \"phone\": \"+8801711223344\",\n  \"role\": \"owner\",\n  \"nidNumber\": \"1234567890123\",\n  \"status\": \"active\",\n  \"permissions\": [\"manage-events\", \"manage-users\"],\n  \"addressLine1\": \"House 10\",\n  \"addressLine2\": \"Road 12\",\n  \"city\": \"Dhaka\",\n  \"country\": \"Bangladesh\"\n}"
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 201 or 200', function () {",
              "  pm.expect([200,201]).to.include(pm.response.code);",
              "});",
              "const json = pm.response.json();",
              "pm.test('Response contains data object', function () {",
              "  pm.expect(json).to.have.property('data');",
              "});",
              "pm.test('Email ends with .xyz', function () {",
              "  pm.expect(json.data.email).to.match(/\\.xyz$/i);",
              "});",
              "pm.environment.set('adminId', json.data.id || 'admin_001');"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
