{
	"info": {
		"_postman_id": "staff-collection",
		"name": "Staff API Collection",
		"description": "Complete API collection for Staff user. All endpoints require JWT authentication with 'staff' role. TenantId is automatically extracted from JWT token.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{access_token}}",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3000",
			"type": "string"
		},
		{
			"key": "access_token",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set('access_token', jsonData.access_token);",
									"    pm.collectionVariables.set('access_token', jsonData.access_token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"staff@example.com\",\n  \"password\": \"Password@123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": ["{{base_url}}"],
							"path": ["auth", "login"]
						}
					}
				}
			]
		},
		{
			"name": "Staff Profile",
			"item": [
				{
					"name": "Get Current Staff Profile",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/staff/me",
							"host": ["{{base_url}}"],
							"path": ["staff", "me"]
						}
					}
				},
				{
					"name": "Update Staff Profile",
					"request": {
						"method": "PUT",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"fullName\": \"Updated Staff Name\",\n  \"position\": \"SUPERVISOR\",\n  \"phoneNumber\": \"+8801712345678\",\n  \"gender\": \"MALE\"\n}"
						},
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/staff/me",
							"host": ["{{base_url}}"],
							"path": ["staff", "me"]
						}
					}
				},
				{
					"name": "Update Staff Email",
					"request": {
						"method": "PATCH",
						"header": [],
						"url": {
							"raw": "{{base_url}}/staff/me/email?email=newemail@example.com",
							"host": ["{{base_url}}"],
							"path": ["staff", "me", "email"],
							"query": [
								{"key": "email", "value": "newemail@example.com"}
							]
						}
					}
				},
				{
					"name": "Register Staff (Admin Only)",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"newstaff@example.com\",\n  \"password\": \"Password@123\",\n  \"fullName\": \"New Staff Member\",\n  \"position\": \"CHECKER\",\n  \"phoneNumber\": \"+8801712345678\",\n  \"gender\": \"FEMALE\"\n}"
						},
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/staff/register",
							"host": ["{{base_url}}"],
							"path": ["staff", "register"]
						}
					}
				}
			]
		},
